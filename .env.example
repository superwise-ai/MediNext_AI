# =============================================================================
# MediNext AI - Environment Variables Example
# =============================================================================
# Copy this file to .env and update the values as needed
# =============================================================================

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application Name and Version
APP_NAME=MediNext AI
APP_VERSION=1.0.0
APP_DESCRIPTION="Advanced AI-powered Healthcare Management System"

# =============================================================================
# SUPERWISE API CONFIGURATION
# =============================================================================

# Superwise API Configuration
SUPERWISE_API_URL=https://api.superwise.ai/
SUPERWISE_API_VERSION=v1
SUPERWISE_APP_ID=YOUR_SUPERWISE_APP_ID

# API Timeout Settings
API_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=1

# =============================================================================
# STREAMLIT CONFIGURATION
# =============================================================================

# Streamlit Server Settings
STREAMLIT_SERVER_PORT=9000
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false
STREAMLIT_SERVER_RUN_ON_SAVE=true
STREAMLIT_SERVER_FILE_WATCHER_TYPE=auto

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging settings
LOG_LEVEL=INFO
LOG_FILE=logs/medinext_ai.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Security settings (for future use)
SECRET_KEY=your-secret-key-here
ENCRYPTION_KEY=your-encryption-key-here

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature toggles
ENABLE_SUPERWISE_AI=true
ENABLE_PATIENT_ANALYTICS=true
ENABLE_GUARDRAIL_MONITORING=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development mode
DEBUG=false
ENVIRONMENT=production

# =============================================================================
# DOCKER SETTINGS (for Docker deployment)
# =============================================================================

# Docker-specific settings
DOCKER_IMAGE_NAME=medinext-ai
DOCKER_TAG=latest
DOCKER_PORT=9000

# =============================================================================
# NOTES
# =============================================================================
# 
# 1. Security keys: Generate strong, unique keys for production use
#
# 2. Feature flags: Set to false to disable specific features
#
# 3. Logging: Adjust log level based on environment (DEBUG, INFO, WARNING, ERROR)
#
# =============================================================================
